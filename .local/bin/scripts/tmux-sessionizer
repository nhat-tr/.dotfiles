#!/usr/bin/env bash

echo "begin"

if [[ $# -eq 1 ]]; then
    selected=$1
    echo "selected $1"
else
    selected=$(find ~/Work/Regrinding -mindepth 1 -maxdepth 1 -type d | fzf)
    echo "selected $selected"
fi

if [[ -z $selected ]]; then
    echo "exit"
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected
    echo "new-session -s $selected_name -c $selected"
    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected
    echo "new-session -ds $selected_name -c $selected"
fi

tmux switch-client -t $selected_name
echo "switch-client -t $selected_name"

echo "end"
